{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "**/*.ts",
        "typings.d.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}