{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "target": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "**/*.ts",
    ],
    "exclude": [
        "dist",
        "node_modules",
        "e2e"
    ]
}